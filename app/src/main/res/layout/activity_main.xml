<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.sch.smktelkom_mlg.www.menuapp.MainActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtRupiah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/radioGroup"
            android:layout_weight="1"
            android:text="Masukkan Nilai Rupiah Anda" />

        <EditText
            android:id="@+id/editRupiah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtRupiah"
            android:layout_marginTop="22dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

        <RadioButton
            android:id="@+id/radioDolar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editRupiah"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@+id/radioGroup"
            android:layout_weight="1"
            android:text="Dolar" />

        <RadioButton
            android:id="@+id/radioEuro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/radioDolar"
            android:layout_below="@+id/radioDolar"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="Euro" />

        <Button
            android:id="@+id/btnOkKonversi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioEuro"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="OK" />

        <TextView
            android:id="@+id/txtHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnOkKonversi"
            android:layout_marginStart="19dp"
            android:layout_toEndOf="@+id/radioGroup"
            android:layout_weight="1"
            android:text="Hasil"
            android:textSize="18sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioGroup"
        android:layout_marginStart="16dp"
        android:text="Rupiah" />

</RelativeLayout>
